<header>
  <div class="container mainHeader">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-6">
        <img src="/public/images/logoHome.png" class="img-fluid" alt="">
      </div>
      <div class="col-12 col-sm-12 col-md-6">
        <div class="row">
          <div class="col-12">
            <div class="contact pt-2">
              <p><i class="fas fa-phone-volume pr-2"></i><strong>(028) 38941929</strong></p>
              <p><i class="far fa-envelope pl-4 pr-2"></i><strong>bantingovap@gmail.com</strong></p>
            </div>
          </div>
          <div class="col-12">
            <div class="search">
              <form method="POST" action="/tim-kiem">
                <input type="text" placeholder="Nhập từ khóa...." name="key">
                <button type="submit"><i class="fas fa-search"></i></button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-12 col-md-12 p-0">
        <div class="menu">
          <div class="tab-menu">
            <div class="head-box">
              <div class="container">
                <i class="fas fa-bars float-left"></i>
              </div>
            </div>
            <div class="menu-box">
              <ul>
                <li><a href="/"> TRANG CHỦ</a></li>
