                <li><a href="/doanh-nghiep">DOANH NGHIỆP</a</li> <li><a href="">DU LỊCH</a></li>
              </ul>
            </div>
          </div>
          <div class="normal-menu">
            <ul>
              <% let i=0; %>
              <% menuItem.forEach(function(ele){ %>
              <% if(i == activeMenu){ %>
                 <li style="background-color: #eb9812;"><a href="<%= ele.link %>"><%= ele.item %></a></li>
              <% } else{ %>
                 <li><a href="<%= ele.link %>"><%= ele.item %></a></li>
              <% } %>
              <% i++; }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

</header>