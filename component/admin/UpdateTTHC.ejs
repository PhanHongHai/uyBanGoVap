<div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title float-left">Cập nhật thủ tục hành chính</h5>
                        <div class="">
                            <div class="card-body">
                                <% if(list) {%>
                                <% list.forEach(function(ele){ %>
                                <form action="/admin/thu-tuc-hanh-chinh/<%=ele._id%>" method="POST" enctype="multipart/form-data">
                                    <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Tiêu Đề</label>
                                            <textarea class="form-control form-control-sm"
                                                name="titleAP"><%=ele.titleAP%></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Lĩnh Vực</label>
                                            <select id="inputSmall" type="text" class="form-control form-control-sm"
                                                name="idField">
                                                <% listLV.forEach(val =>{ %>                                                   
                                                   <% if(ele.field[0].nameField === val.nameField){ %>                                            
                                                <option value="<%= val._id %>" selected><%=val.nameField%></option>
                                                <% }
                                                else{ %>
                                                 <option value="<%= val._id %>"><%=val.nameField%></option>
                                                <% }}) %>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Trình Tự Thực
                                                Hiện</label>
                                            <textarea class="form-control form-control-sm" name="sequence" id=""
                                                cols="30" rows="5" ><%=ele.sequence%></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Cách Thức Thực
                                                Hiện</label>
                                            <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                name="method" value="<%=ele.method%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Hồ Sơ</label>
                                            <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                name="profile" value="<%=ele.profile%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Đối Tượng</label>
                                            <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                name="object" value="<%=ele.object%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Thời Gian Xử Lý</label>
                                            <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                name="resolutionTime" value="<%=ele.resolutionTime%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Cơ Quan Ban Hành</label>
                                            <select id="inputSmall" class="form-control form-control-sm"
                                                name="idCQ">
                                                <% listCQ.forEach(val =>{ %>
                                                <% if(ele.idCQ == val._id){ %>
                                                <option value="<%= val._id %>" selected><%=val.nameAg%></option>
                                                <% }else{ %>
                                                   <option value="<%= val._id %>"><%=val.nameAg%></option>
                                                <% }}) %>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Kết Quả</label>
                                            <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                name="result" value="<%=ele.result%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Yêu Cầu, Điều
                                                kiện</label>
                                            <textarea class="form-control form-control-sm" name="request" id=""
                                                cols="30" rows="5" value="<%=ele.nameForm%>"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Lệ Phí</label>
                                            <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                name="fees" value="<%=ele.fees%>">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputSmall" class="col-form-label">Tên Mẫu Đơn</label>
                                            <input id="inputSmall" type="text" class="form-control form-control-sm" value="<%=ele.nameForm%>"
                                                name="nameForm">
                                        </div>

                                        <div class="form-group">
                                            <label for="inputDefault" class="col-form-label">Tài liệu đính
                                                kèm <a href="/admin/thu-tuc-hanh-chinh/download/<%=ele._id%>"><%=ele.linkFile%></a></label>
                                            <input id="inputDefault" type="file" class="form-control" name="file">
                                        </div>
                                    <div class="form-group float-right">
                                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                                        <a href="/admin/thu-tuc-hanh-chinh"  class="btn btn-danger">Hủy</a>
                                    </div>
                                </form>
                                <%})} %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>