<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title float-left">Danh sách danh mục</h3>
                    <div class="float-right">
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center" scope="col">Tiêu đề</th>
                                    <th class="text-center" scope="col">Lượt bình luận</th>
                                    <th class="text-center" scope="col">Xử lý</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(list.length !=0){
                                        let i=1;
                                    list.forEach(function(ele){
                                    %>
                                <tr>
                                    <td class="text-center"><%= ele.title %></td>
                                    <td class="text-center"><%=ele.comment.length %></td>
                                    <td class="text-center">
                                        <% if(ele.comment.length !=0){ %>
                                        <div class="dropdown">
                                            <button class="btn btn-success dropdown-toggle" type="button"
                                                id="dropdownMenuButton<%=i%>" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-cog"></i>
                                            </button>

                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton<%=i%>">
                                                <i class="far fa-eye pr-3 dropdown-item" data-toggle="modal"
                                                    data-target="#modalView<%=i%>"
                                                    style="cursor:pointer;">&ensp;&ensp;Xem chi tiết</i>
                                                <i class="fas fa-trash-alt pr-3 dropdown-item" style="cursor:pointer;"
                                                    data-toggle="modal" data-target="#deleteNew">&ensp;&ensp;Xóa tất
                                                    cả</i>
                                            </div>

                                        </div>
                                        <% } else{ %>
                                        <i class="fas fa-comment-slash"></i>
                                        <% } %>
                                    </td>
                                    <div class="modal fade " id="modalView<%= i %>" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalScrollableTitle" aria-hidden="true"
                                        style="margin-left: 5%;">
                                        <div class="modal-dialog detailView modal-dialog-scrollable" role="document"
                                            style="max-width: 900px;">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-center"
                                                        id="exampleModalScrollableTitle">
                                                        Thông tin
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body ">
                                                    <ul id="listComment">
                                                        <% let y=1;%>
                                                        <% ele.comment.forEach(function(val){ %>

                                                        <li>
                                                            <div class="item-comment">
                                                                <div class="item-header w-100">
                                                                    <span class="">
                                                                        <h4><strong><%= val.userName %></strong>&ensp;(<span
                                                                                class="font-weight-light"
                                                                                style="font-size: 13px;"><%= val.email %></span>)
                                                                        </h4>
                                                                    </span>
                                                                    <p class="d-inline-block float-right pr-2">
                                                                        <%= val.time %></p>
                                                                </div>
                                                                <p><%= val.content %></p>
                                                            </div>
                                                            <button type="button" class="btn"">
                                                                    <i class=" fas fa-trash-alt pr-3 dropdown-item"
                                                                style="cursor:pointer;" data-toggle="modal"
                                                                data-target="#deleteCM<%= y %>">
                                                                </i>
                                                            </button>
                                                            <div class="modal fade" id="deleteCM<%= y %>" tabindex="1" role="dialog"
                                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLabel">Xóa Bình Luận
                                                                        </h5>
                                                                        <button type="button" class="close" data-dismiss="modal"
                                                                            aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-primary"
                                                                            onclick="deleteCM('<%= val._id %>')">Xác nhận</button>
                                                                        <button type="button" class="btn btn-secondary"
                                                                            data-dismiss="modal">Hủy</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        </li>
                                                        <% y++; }) %>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <% i++ })} %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>