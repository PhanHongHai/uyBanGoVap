<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title float-left">Danh sách thủ tục hành chính</h3>
                    <div class="float-right">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAđ">
                            Thêm
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="modalAđ" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalScrollableTitle">Thêm mới</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="POST" action="/admin/tai-khoan" id="addAcc">
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Tiêu đề</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Đối tượng</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Kết quả</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Quy trình</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Phương thức</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Hồ sơ</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Thời gian xử lý</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Yêu cầu</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">Phí</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">nameForm</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputSmall" class="col-form-label">legalBasis</label>
                                                <input id="inputSmall" type="text" class="form-control form-control-sm"
                                                    name="username">
                                            </div>

                                            <div class="form-group">
                                                <label for="inputDefault" class="col-form-label">File</label>
                                                <input id="inputDefault" type="file" class="form-control" name="file">
                                            </div>

                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Xác Nhận</button>
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Thoát</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">


                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Tiêu đề</th>
                                    <th scope="col"></th>
                                    <th scope="col">Xử lý</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(list){ 
                                    let i=1;    
                                %>
                                <% list.forEach(function(ele){ %>
                                <tr class="text-center">
                                    <td class="d-block text-truncate" style="max-width: 100%;font-size: 12px;">
                                        <%= ele.title %></span></td>
                                    <td style="font-size: 12px;"><%= ele.object %></td>
                                    <td>
                                    <td style="font-size: 12px;"><%= ele.fees %></td>
                                        <div class="dropdown">
                                            <button class="btn btn-success dropdown-toggle" type="button"
                                                id="dropdownMenuButton<%=i%>" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="false">
                                                Xử lý
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton<%=i%>">
                                                <i class="far fa-eye pr-3 dropdown-item" data-toggle="modal"
                                                    data-target="#modalEdit<%=i%>"
                                                    style="cursor:pointer;">&ensp;&ensp;Xem chi tiết</i>
                                                <a class="dropdown-item"
                                                    href="/admin/thu-tuc-hanh-chinh/<%=ele._id%>"><i
                                                        class="fas fa-edit pr-3"
                                                        style="font-weight: normal;">&ensp;&ensp;Cập nhật</i></a>
                                                <i class="fas fa-trash-alt pr-3 dropdown-item" style="cursor:pointer;"
                                                    data-toggle="modal" data-target="#deleteTT">&ensp;&ensp;Xóa</i>
                                            </div>
                                        </div>
                                        <div class="modal fade" id="deleteTT" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Xóa thủ tục</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-primary"
                                                            onclick="deleteNews('<%= ele._id %>')">Xác nhận</button>
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Hủy</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <!-- Button trigger modal -->
                                    <!-- Modal -->
                                    <div class="modal fade " id="modalEdit<%= i %>" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalScrollableTitle" aria-hidden="true"
                                        style="margin-left: 5%;">
                                        <div class="modal-dialog modal-dialog-scrollable" role="document"
                                            style="max-width: 900px;">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-center"
                                                        id="exampleModalScrollableTitle">
                                                        Thông tin thủ tục hành chính
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body ">
                                                    <div class="headerInfo text-center">
                                                        <h2 class="font-weight-normal"><%=ele.title%></h2>
                                                        <span class="pl-2"><i
                                                                class="fas fa-folder-open pr-2"></i><%=ele%></span>
                                                    </div>
                                                    <div class="bodyInfo w-80 mx-auto mb-2">
                                                        <h4 class="d-inline-block font-weight-normal">Trích đoạn :
                                                        </h4>
                                                        <p class="d-inline-block"><%=ele%></p>

                                                    </div>
                                                    <div class="bodyInfo w-80 mx-auto fr-view mt-2">
                                                        <h4 class="d-inline-block font-weight-normal">Nội dung chính
                                                            :</h4>
                                                        <p class="d-inline-block"><%=ele%></p>

                                                    </div>
                                                    <div class="anh text-center">
                                                        <img class="" src="/public/uploads/<%=ele.linkImg%>" alt=""
                                                            width="50%" height="auto">
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                    </div>
                    <%i++ })} %>
                    </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
</div>