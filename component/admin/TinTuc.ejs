<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid tinTuc" style="min-height: 1300px;">
    <div class="row ">
        <div class="col-md-12 listNews active">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title float-left">Danh sách bài viết</h3>
                    <div class="float-right">
                        <button class="btn btn-primary btnNews">
                            Thêm
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive ">
                        <div class="table-responsive">
                            <table id="zero_config" class="table">
                                <thead>
                                    <tr class="text-center">
                                        <th scope="col">Ảnh</th>
                                        <th scope="col">Tiêu đề</th>
                                        <th scope="col">Ngày đăng</th>
                                        <th scope="col">Xử lý</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(list){ 
                        let i=1;    
                    %>
                                    <% list.forEach(function(ele){ %>
                                    <tr class="text-center">
                                        <td><img src="/public/uploads/<%= ele.linkImg %>" width="100" height="50"> </td>
                                        <td class="" style="font-size: 12px;">
                                            <%= ele.title %></span></td>
                                        <td style="font-size: 12px;"><%= ele.postTime %></td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-success dropdown-toggle" type="button"
                                                    id="dropdownMenuButton<%=i%>" data-toggle="dropdown"
                                                    aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-cog"></i>
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton<%=i%>">
                                                    <i class="far fa-eye pr-3 dropdown-item" data-toggle="modal"
                                                        data-target="#modalEdit<%=i%>"
                                                        style="cursor:pointer;">&ensp;&ensp;Xem chi tiết</i>
                                                    <a class="dropdown-item"
                                                        href="/admin/tin-tuc/bai-viet/loadUpdate/<%=ele._id%>"><i
                                                            class="fas fa-edit pr-3"
                                                            style="font-weight: normal;">&ensp;&ensp;Cập nhật</i></a>
                                                    <i class="fas fa-trash-alt pr-3 dropdown-item"
                                                        style="cursor:pointer;" data-toggle="modal"
                                                        data-target="#deleteNew">&ensp;&ensp;Xóa</i>
                                                </div>
                                            </div>
                                            <div class="modal fade" id="deleteNew" tabindex="-1" role="dialog"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Xóa bài viết
                                                            </h5>
                                                            <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-primary"
                                                                onclick="deleteNews('<%= ele._id %>')">Xác nhận</button>
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Hủy</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <!-- Button trigger modal -->
                                        <!-- Modal -->
                                        <div class="modal fade " id="modalEdit<%= i %>" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalScrollableTitle" aria-hidden="true"
                                            style="margin-left: 5%;">
                                            <div class="modal-dialog modal-dialog-scrollable" role="document"
                                                style="max-width: 900px;">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title text-center"
                                                            id="exampleModalScrollableTitle">
                                                            Thông tin bài viết
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body ">
                                                        <div class="headerInfo text-center">
                                                            <h2 class="font-weight-normal"><%=ele.title%></h2>
                                                            <span class="pr-2"><i class="fas fa-clock pr-2"></i>Ngày
                                                                :<%=ele.postTime%></span>
                                                            <span class="pl-2"><i
                                                                    class="fas fa-folder-open pr-2"></i><%=ele.cate[0].nameCate%></span>
                                                        </div>
                                                        <div class="anh text-center">
                                                            <img class="" src="/public/uploads/<%=ele.linkImg%>" alt=""
                                                                width="30%" height="auto">
                                                        </div>
                                                        <div class="bodyInfo w-80 mx-auto mb-2 mt-3">
                                                            <h4 class="d-inline-block font-weight-normal">Đường dẫn :
                                                            </h4>
                                                            <p class="d-inline-block"><%=ele.linkSEO%></p>

                                                        </div>
                                                        <div class="bodyInfo w-80 mx-auto fr-view mt-2">
                                                            <h4 class="d-inline-block font-weight-normal">Nội dung chính
                                                                :</h4>
                                                            <p class="d-inline-block"><%-ele.mainContent%></p>

                                                        </div>


                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                        </div>
                        <%i++ })} %>
                        </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 addNews ">
        <div class="card  w-75 mx-auto">
            <div class="card-header text-center bg-primary">
                <h3 class="card-title">Thêm bài viết</h3>
            </div>
            <div class="card-body">
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-form-label">Tên tiêu đề</label>
                        <input id="us" type="text" class="form-control form-control-sm" name="title" required>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Danh mục</label>
                        <select name="idCate" class="form-control" id="input-select">
                            <% cate.forEach(function(ele){ %>
                            <option value="<%=ele._id%>"><%= ele.nameCate %></option>
                            <%}) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="my-input">Đường dẫn </label>
                        <textarea id="my-input" class="form-control" name="linkSEO" rows="3"></textarea>
                    </div>
                    <div class="form-group w-50">
                        <label class="col-form-label">Ảnh nền</label>
                        <input id="us" type="file" class="form-control form-control-sm" name="linkImg" required>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Nội dung chính</label>
                        <textarea name="mainContent" id="myEditor"></textarea>
                    </div>
                    <div class="form-group float-right">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                        <button class="btn btn-danger btnExit">Hủy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>