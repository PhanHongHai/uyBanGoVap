<%
    img='/public/images/pattern_bg.png';
    let menuItem=[
    {item:"TRANG CHỦ",link:"/"},
    {item:"GIỚI THIỆU",link:"/gioi-thieu"},
    {item:"TIN TỨC SỰ KIỆN",link:"/tin-tuc-su-kien"},
    {item:"QUY HOẠCH VÀ PHÁT TRIỂN",link:"/quy-hoach-va-phat-trien"},
    {item:"CÔNG DÂN",link:"/cong-dan"},
    {item:"DOANH NGHIỆP",link:"/doanh-nghiep"},
    {item:"DU LỊCH",link:"/du-lich"},
  ]
 %>
<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../component/head %>
    <link rel="stylesheet" href="/public/stylesheets/scss/sideBar.css">
    <link rel="stylesheet" href="/public/stylesheets/scss/tinChung.css">
    <style>
        #tthc tr th,
        #tthc tbody td {
            font-size: 14px;
        }
    </style>
</head>

<body>

    <body class="mw-100 m-0 p-0 " style="background-image: url('<%= img %>');background-attachment: fixed;"">
        <div class="container p-0 allPage">
            <% include ../component/header %>

            <div id="bodyPage">
                <% include ../component/breadCrumb %>
                <div class="row">
                    <div class="col-md-9 mb-3">
                        <div class="tinChung">
                            <div class="headTinChung">
                                <h3><a href="/cong-dan/thu-tuc-hanh-chinh"></i>THỦ TỤC HÀNH CHÍNH</a></h3>
                            </div>
                            <div class="contentTinChung mt-3 pb-4">
                                <div class="table-responsive">
                                    <table id="tthc" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th class="text-center" scope="col">STT</th>
                                                <th class="text-center" scope="col">Tiêu đề</th>
                                                <th class="text-center" scope="col">Lĩnh vực</th>
                                                <th class="text-center" scope="col">Cơ quan ban hành</th>
                                                <th class="text-center" scope="col">Tải về</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(list){
                                                let i=1;
                                                list.forEach(function(ele){
                                            %>
                                                <tr>
                                                    <th class="text-center" scope="row"><%= i %></th>
                                                    <td class="text-center"><a href="/cong-dan/thu-tuc-hanh-chinh/<%=ele._id%>"><%= ele.titleAP %></a></td>
                                                    <td class="text-center"><%= ele.field[0].nameField %></td>
                                                    <td class="text-center"><%= ele.cq[0].nameAg %></td>
                                                    <td class="text-center">
                                                        <% if(ele.linkFile){ 
                                                     let duoiFile =ele.linkFile.substr(ele.linkFile.length-4,4);
                                                     if(duoiFile === ".doc" ||duoiFile === "docx"){
                                                %>
                                                        <a href="/thu-tuc-hanh-chinh/download/<%=ele._id%>">
                                                            <img class="img-fluid" src="/public/images/WORD.png" alt="">
                                                        </a>

                                                        <% }else{ %>
                                                        <a href="/thu-tuc-hanh-chinh/download/<%=ele._id%>">
                                                            <img class="img-fluid" src="/public/images/PDF.png" alt="">
                                                        </a>
                                                        <% }} %>
                                                    </td>
                                                </tr>
                                            <% i++; })} %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-3">
                        <%- include('../component/sideBar',{sideBar})%>
                    </div>
                </div>
            </div>
            <% include ../component/footer %>
        </div>
        <% include ../component/script %>
    </body>

</html>