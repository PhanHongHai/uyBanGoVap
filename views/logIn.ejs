<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../component/headAdmin %>
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>

<body>
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><a href="/"><img class="logo-img" width="300"
                        src="/public/images/logoHome.png" alt="logo"></a></div>
            <div class="card-body">
                <form method="POST" action="/login">
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="username" type="text" placeholder="Username"
                            name="username" novalidate >
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="password" type="password" placeholder="Password"
                            name="password" novalidate>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Đăng Nhập</button>
                    <div class="card-footer bg-white p-0 mt-4 card-footer-item-bordered">
                        <div class="pt-3">
                            <% if(errs != null){
                                errs.forEach(function(ele,index){ %>
                            <p class="mt-1 text-danger"><%= errs[index].msg %></p>
                            <%})} %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/public/js/jquery.min.js"></script>
    <script src="/public/js/bootstrap.bundle.js"></script>
</body>

</html>